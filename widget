<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Madison Weather</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            padding: 20px;
            background: #f4f4f4;
        }
        .weather-container {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            max-width: 300px;
            margin: auto;
        }
    </style>
</head>
<body>
    <div class="weather-container">
        <h2>Madison, WI Weather</h2>
        <p id="temperature">Loading...</p>
        <p id="description"></p>
    </div>

    <script>
        const apiKey = "a1694717d331ffcc403be2e7b71c12b8";  // ⬅️ Replace this with your API key
        const city = "Madison";
        const apiUrl = `https://api.openweathermap.org/data/2.5/weather?q=${city}&units=imperial&appid=${apiKey}`;

        fetch(apiUrl)
            .then(response => response.json())
            .then(data => {
                document.getElementById("temperature").innerText = `Temperature: ${data.main.temp}°F`;
                document.getElementById("description").innerText = `Condition: ${data.weather[0].description}`;
            })
            .catch(error => {
                document.getElementById("temperature").innerText = "Error loading weather data";
            });
    </script>
</body>
</html>
